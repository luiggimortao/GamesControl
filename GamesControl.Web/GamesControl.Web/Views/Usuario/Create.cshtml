@model GamesControl.Web.tbusuario

@{
    ViewBag.Title = "Incluir Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Incluir Usuário</h2>

@using (Html.BeginForm("Create", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-offset-2 col-md-4">
                <div class="form-group">
                    @Html.Label("Nome", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.usuarioNome, new { htmlAttributes = new { @class = "form-control" }, maxLength = 200 })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.usuarioEmail, new { htmlAttributes = new { @class = "form-control" }, maxLength = 200 })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Celular", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.usuarioTelefone, new { htmlAttributes = new { @class = "form-control" }, maxLength = 15 })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Status", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Status", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Perfil", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Perfil", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="col-md-offset-2">
                    <input id="btnSalvar" type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </div>
            <div class="col-md-6">
                <div><img id="imgUpload" src="~/Content/Images/fotoVazia.png" accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|images/*" style="cursor:pointer; width:220px; height:230px;" /></div>
                <br />
                Utilizar imagens de no máximo 2Mb.
                <input type='file' id="fileUpload" name="fileUpload" style="display:none;" />
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Voltar", "Index")
    </div>

    <script type="text/javascript">

        $(document).ready(function () {

            Limpar();

            //Máscaras
            $("#usuarioTelefone").mask("(99) 99999-9999");

            $('#imgUpload').click(function () {
                $('#fileUpload').click();
            });

            $("#fileUpload").change(function () {
                readURL(this);
            });

            $('#btnSalvar').click(function () {

                if (!Consistir()) {
                    return false;
                }
            });

        });

        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgUpload').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        function Consistir() {

            if ($.trim($("#usuarioTelefone").val()) == "() -") {
                $("#usuarioTelefone").val("");
            }

            if ($.trim($("#usuarioNome").val()).length <= 0) {
                $.AlertDialog("O campo 'Nome' é obrigatório", 'Mensagem', null, null);
                return false;
            }

            if ($.trim($("#usuarioEmail").val()).length <= 0) {
                $.AlertDialog("O campo 'Email' é obrigatório", 'Mensagem', null, null);
                return false;
            }

            if ($.trim($("#Status").val()).length <= 0) {
                $.AlertDialog("O campo 'Status' é obrigatório", 'Mensagem', null, null);
                return false;
            }

            if ($.trim($("#Perfil").val()).length <= 0) {
                $.AlertDialog("O campo 'Perfil' é obrigatório", 'Mensagem', null, null);
                return false;
            }

            if ($("#fileUpload").val().length > 0) {
                var file_size = $('#fileUpload')[0].files[0].size
                if (file_size > 2097152) {
                    $.AlertDialog("A foto para o usuário é maior que 2Mb. Favor selecionar uma imagem menor.", 'Mensagem', null, null);
                    return false;
                }
            }

            return true;
        }

        function Limpar() {

            $('#imgUpload').attr('src', "/Content/Images/fotoVazia.png");
            $("#usuarioEmail").val(''),
            $("#usuarioNome").val(''),
            $("#usuarioTelefone").val(''),
            $("#Status").val(''),
            $("#Perfil").val('')
            $("#fileUpload").val('');
        }

    </script>
}

